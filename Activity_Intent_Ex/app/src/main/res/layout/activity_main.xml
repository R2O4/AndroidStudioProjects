<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"

    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Activity"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnOpenAct2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Activity 2"
        android:textSize="26sp"
        android:backgroundTint="#FF9800"/>

    <Button
        android:id="@+id/btnOpenShowDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Show Dialog"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00BCD4"/>

    <Button
        android:id="@+id/btnOpenAct3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Act 3 \n (sending data)"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3F51B5"/>

    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhap vo mot so"
        android:textSize="26sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="15dp"/>

    <Button
        android:id="@+id/btnOpenAct4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Act 4 \n (sending - receiving data)"
        android:textSize="26sp"
        android:backgroundTint="#3F51B5"/>

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="26sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="15dp"/>

</LinearLayout>