<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FF5722">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_account_circle_24"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Twin.2003"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác thực email để nhận thông tin ưu đãi."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNhapEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Email"
            android:textColor="#03A9F4"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_close_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tv_vi_voucher"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_shopping_bag_24"
            android:text="Ví Voucher" />

        <TextView
            android:id="@+id/tv_shopee_xu"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_currency_exchange_24"
            android:text="Shopee Xu" />

        <TextView
            android:id="@+id/tv_thanh_toan"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_account_balance_wallet_24"
            android:text="Thanh toán" />

        <TextView
            android:id="@+id/tv_dia_chi"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_location_pin_24"
            android:text="Địa chỉ" />

        <TextView
            android:id="@+id/tv_moi_ban_be"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_people_24"
            android:text="Mời bạn bè" />

        <TextView
            android:id="@+id/tv_trung_tam_tro_giup"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_help_24"
            android:text="Trung tâm Trợ giúp" />

        <TextView
            android:id="@+id/tv_ung_dung_cho_chu_quan"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_store_24"
            android:text="Ứng dụng cho Chủ quán" />

        <TextView
            android:id="@+id/tv_chinh_sach_quy_dinh"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_local_police_24"
            android:text="Chính sách quy định" />

        <TextView
            android:id="@+id/tv_cai_dat"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_settings_24"
            android:text="Cài đặt" />

        <TextView
            android:id="@+id/tv_ve_shopeefood"
            style="@style/ProfileMenuItem"
            android:drawableStart="@drawable/baseline_food_bank_24"
            android:text="Về ShopeeFood" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnDangXuat"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_margin="16dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="Đăng xuất"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
